                            @* <h5 class="card-title">Books<span style="font-size:32px;">&nbsp;&nbsp; Total</span></h5> *@

                    <form method="post" asp-action="Booklist" asp-controller="Students">
                      <div class="d-flex col-12 col-lg-4">
                          <select name="searchparam" class="form-control">
                            <option>--Select--</option>
                            @if (bsublist != null)
                            {
                                foreach (var items in bsublist)
                                {
                                    <option>@items.CName</option>

                                }
                            }
                        </select>
                            &nbsp;&nbsp;<button type="submit" class="btn btn-dark">Search</button>
                       </div>
                    </form>
                   
                           

                    

                           

                            <!-- Table with stripped rows -->
                            <table id="example" class="table  datatable table-bordered">
                                <thead>
                                    <tr>
                                       
                                        <th class="text-center">Book Id</th>
                                        <th class="text-center">Book Name</th>
                                        <th class="text-center">Book Price</th>
                                        <th class="text-center">Author Name</th>
                                        <th class="text-center">Publication Name</th>
                                        <th class="text-center">Language</th>
                                        <th class="text-center">Book Category</th>
                                        <th class="text-center">Shelf No.</th>
                                        <th class="text-center">Get Qr</th>
                                       

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Booklist != null)
                                    {
                                        foreach (var item in Booklist)
                                        { 
                                            <tr>
                                               <td class="text-center">@item.Id</td>

                                                <td class="text-center">@item.Bname</td>

                                                 <td class="text-center">@item.Bprice</td>
                                               
                                                <td class="text-center">@item.Bauthor</td>

                                                <td class="text-center">@item.Bpubname</td>

                                                <td class="text-center">@item.Blang</td>

                                                <td class="text-center">@item.Bcname</td>

                                                <td class="text-center">@item.Bshelfno</td>

                                                <td class="text-center"><a class="btn btn-dark" target="_blank" href="~/Home/GenerateQr?qrid=@item.Id">Qr Code</a></td>

                                            </tr>
                                        }

                                    } 


                                </tbody>

                            </table>
                            <!-- End Table with stripped rows -->


