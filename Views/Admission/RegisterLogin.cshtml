@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DPBS ADMIN LOGIN PAGE</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/libs/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/libs/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/libs/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/libs/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sign In Start -->
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="index.html" class="">
                                <h4 class="text-primary">DPBS Admission</h4>
                            </a>
                            <h6>New Registeration</h6>
                        </div>
                        <div style="text-align:center;">

                        @if (ViewBag.success != null)
                        {
                            <h5 style="color:green;">@ViewBag.success</h5>
                        }

                        @if (ViewBag.error != null)
                        {
                            <h5 style="color:red;">@ViewBag.error</h5>
                        }

                        </div>

                        <form asp-action="NewRegistration" asp-controller="Admission" method="post">

                            <div class="form-floating mb-3">
                                <input name="cname" type="text" class="form-control" id="floatingInput" placeholder="">
                                <label for="floatingInput">Candidate Name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input name="cemail" type="email" class="form-control" id="floatingInput" placeholder="Email Id">
                                <label for="floatingInput">Email Id</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input name="cmobile" type="text" class="form-control" id="floatingInput" placeholder="Mobile No">
                                <label for="floatingInput">Mobile No</label>
                            </div>

                            <div class="form-floating mb-4">
                                <input name="cpass" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                                <label for="floatingPassword">Create Password</label>
                            </div>
                           
                            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Register</button>
                            <p class="text-center mb-0">Already Registered?<a href="~/Admission/LoginPortal">Login Here</a></p>

                        </form>

                    </div>
                </div>
            </div>
        </div>
        <!-- Sign In End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/libs/lib/chart/chart.min.js"></script>
    <script src="~/libs/lib/easing/easing.min.js"></script>
    <script src="~/libs/lib/waypoints/waypoints.min.js"></script>
    <script src="~/libs/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/libs/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/libs/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/libs/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/libs/js/main.js"></script>
</body>

</html>
